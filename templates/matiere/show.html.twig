{% extends 'base.html.twig' %}

{% block title %}Modifier les matières{% endblock %}

{% block body %}
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h1 class="text-center">{{ 'matiere'|trans }}</h1>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
          {{ 'nom'|trans }}
          {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group mt-4">
          {{ 'coefficient'|trans }}
          {{ form_widget(form.coef, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group mt-4 text-center">
          <button type="submit" class="btn btn-primary">{{ 'modifier'|trans }}</button>
        </div>
        {{ form_end(form) }}

        <form method="post" action="{{ path('matiere_delete', {'id': matiere.id}) }}">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger mt-4" onclick="return confirm('{{ 'Êtes-vous sûr de vouloir supprimer cette matière?'|trans }}')">{{ 'sup'|trans }}</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
